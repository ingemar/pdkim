# Build the PDKIM library
cd src
make -f Makefile.unix
rm ../ext/pdkim/lib/libpdkim1.a
mv libpdkim1.a ../ext/pdkim/lib/libpdkim1.a
rm libpdkim1.so.0 *.o
cd ..

# Build the Ruby C extension
cd ext/pdkim
ruby extconf.rb
make
rm pdkimglue.o
cd ../..

# Build and install the gem
gem build pdkim-gemspec
